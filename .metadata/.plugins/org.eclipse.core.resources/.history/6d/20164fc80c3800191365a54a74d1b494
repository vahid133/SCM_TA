		//assign the 
		PoissonDistribution pi=new PoissonDistribution(5);
		double t=pi.sample();
		System.out.print(t);
		
		
	}
	
	
	//train HMM
	public void trainHMM() {
		HMM<observation> hmm=new HMM<observation>(states,transitions,emissions);
		
	}
	
	
	

	
	
