package SCM_TA_V1;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.*;

public class changeRepresentation {

	public static void txtToCSV() throws FileNotFoundException{
		
		Scanner sc;
		PrintWriter pw=new PrintWriter(new File(System.getProperty("user.dir")+"//results//results//R1//analysis.csv"));;
		String[] items;
		StringBuilder sb=new StringBuilder();
		for(File fileEntry:new File(System.getProperty("user.dir")+"//results//results").listFiles()){
			sc=new Scanner(new File(fileEntry.toURI()));
			int i=0;
			while(sc.hasNextLine()){
				if(i%11==0){
					items=sc.nextLine().split(": ");
					sb.append(items[1]+",");
				}
				else{
					sc.nextLine();
				}
			}
			sb.setLength(sb.length()-1);
			sb.append("\n");
		}
		pw.write(sb.toString());
		pw.close();
	}
}
