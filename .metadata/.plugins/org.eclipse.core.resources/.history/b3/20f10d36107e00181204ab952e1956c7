package SCM_TA_V1;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.*;

public class changeRepresentation {

	public static void txtToCSV() throws FileNotFoundException{
		
		Scanner sc;
		PrintWriter pw=new PrintWriter(new File(System.getProperty("user.dir")+"//results//R1//analysis.csv"));;
		String[] items;
		String fileName;
		String fileNum; 
		String runNum;
		StringBuilder sb=new StringBuilder();
		for(File fileEntry:new File(System.getProperty("user.dir")+"//results//results").listFiles()){
			sc=new Scanner(new File(fileEntry.toURI()));
			fileName=fileEntry.toURI().toString();
			runNum=fileName.substring(16, 16);
			fileNum=fileName.substring(18, 18);
			int i=0;
			while(sc.hasNextLine()){
				int t=i%11;
				if(i%11!=0){
					items=sc.nextLine().split(": ");
					sb.append(items[1]+",");
				}
				else{
					sc.nextLine();
				}
				i++;
			}
			sb.setLength(sb.length()-1);
			sb.append("\n");
		}
		pw.write(sb.toString());
		pw.close();
	}
}
